{
    "name": "hamiltonglaucio/hexagonal",
    "description": "Projeto Arquitetura Hexagonal com Slim Framework",
    "require": {
        "php": "^8.4",
        "slim/slim": "^4.12",
        "slim/psr7": "^1.5",
        "ramsey/uuid": "^4.9",
        "php-di/php-di": "^7.0",
        "ext-pdo": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit"
    }
}
